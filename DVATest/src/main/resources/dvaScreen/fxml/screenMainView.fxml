<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<?import javafx.collections.FXCollections?>
<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="dvaScreen.gui.ScreenMainView"
      prefHeight="400.0" prefWidth="300.0" spacing="10.0">

    <padding>
        <Insets topRightBottomLeft="5.0"/>
    </padding>

    <ImageView fx:id="logoView"/>

    <GridPane hgap="20.0" vgap="10.0">
        <Label text="%screenResolution"/>
        <ComboBox GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="800x600"/>
                </FXCollections>
            </items>
        </ComboBox>

        <Label text="%screenSize" GridPane.rowIndex="1"/>
        <ComboBox GridPane.rowIndex="1" GridPane.columnIndex="1">
            <items>
                <FXCollections fx:factory="observableArrayList">
                    <String fx:value="24'"/>
                </FXCollections>
            </items>
        </ComboBox>
    </GridPane>

    <Separator/>

    <GridPane fx:id="notConnectedPane" vgap="10.0" hgap="20.0">

        <Label text="%connectionHint" GridPane.columnSpan="2"/>

        <Label text="%thisIp" GridPane.rowIndex="1"/>
        <Label fx:id="thisIpLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="%port" GridPane.rowIndex="2"/>
        <Label fx:id="portLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    </GridPane>

    <HBox fx:id="connectedPane">
        <Label text="%connected"/>
    </HBox>

</VBox>
