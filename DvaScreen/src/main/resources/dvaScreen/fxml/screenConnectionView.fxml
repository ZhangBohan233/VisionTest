<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="dvaScreen.gui.ScreenConnectionView"
          prefHeight="200.0" prefWidth="300.0" vgap="10.0" hgap="20.0">

    <padding>
        <Insets topRightBottomLeft="5.0"/>
    </padding>

    <Label text="%connectionHint" GridPane.columnSpan="2"/>

    <Label text="%thisIp" GridPane.rowIndex="1"/>
    <Label fx:id="thisIpLabel" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

    <Label text="%port" GridPane.rowIndex="2"/>
    <Label fx:id="portLabel" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

</GridPane>
